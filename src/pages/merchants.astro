---
import PageLayout from '~/layouts/PageLayout.astro';
import BTCMapWidget from '~/components/widgets/BTCMapWidget.astro';

const metadata = {
  title: 'Merchants',
};
---

<PageLayout metadata={metadata}>
  <section class="mx-auto max-w-7xl px-4 py-12 sm:px-6 lg:px-8">
    <div class="mb-12 text-center">
      <h1 class="text-4xl font-bold tracking-tight text-gray-900 dark:text-white sm:text-5xl">
        Bitcoin Merchants in DC
      </h1>
      <p class="mx-auto mt-4 max-w-2xl text-lg text-gray-600 dark:text-gray-300">
        Explore shops, caf√©s, and services across the District that accept Bitcoin (on-chain & Lightning). This page uses live data from BTC Map. If something's missing or outdated, please update it on BTC Map to help the community.
      </p>
    </div>
    <div class="prose prose-slate dark:prose-invert max-w-none mb-6">
      <p>
        Data courtesy of <a href="https://btcmap.org" target="_blank" rel="noopener noreferrer">BTCMap.org</a>. 
        Update or add merchants there to help keep this list fresh.
      </p>
    </div>
    <BTCMapWidget lat={38.898440071478795} lng={-77.03426861762752} zoom={11} />
  </section>
</PageLayout>
